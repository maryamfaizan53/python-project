def main():
    
   
    m:float = float(input("Enter the mass in kilograms : "))
    c = 299792458 # Speed of light in m/s
    E = m*c**2
    
    print(f"The energy is {E} joules")
    
    print("E = m * C^2...")
    print("m = " + str(m) + " kg")
    print("C = " + str(c) + " m/s")
    
    print(str(E) + " joules of energy!")
    
if __name__ == "__main__":
    main()
user_input1 = int(input("Enter 1 number"))
user_input2 = int(input("Enter 2 number"))
user_input_sign = input("Enter operator")  # Changed to input to accept string operator

if user_input_sign == "+":
    result = user_input1 + user_input2
elif user_input_sign == "-":    
    result = user_input1 - user_input2
elif user_input_sign == "*":    
    result = user_input1 * user_input2
elif user_input_sign == "/":    
    result = user_input1 / user_input2
else:
    result = "Invalid operator"

print(result)  # Changed return to print to display the result


def main():
    print("This program adds two numbers.")
    num1 : str = input("Enter first number: ")
    num1 : int = int(num1)
    num2  : str = input("Enter second number: ")
    num2 : int = int(num2)
    total : int = num1 + num2
    print("The total is " + str(total) + ".")



# Python file to call the main() function.
if __name__ == '__main__':
    main()